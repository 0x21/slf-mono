{
  "name": "backend",
  "private": true,
  "version": "0.1.0",
  "description": "backend",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .turbo node_modules build",
    "start": "pnpm with-env tsx ./src/index.ts",
    "start:onpremise": "pnpm with-env tsx ./dist/index.js",
    "dev": "pnpm with-env tsx watch ./src/index.ts",
    "build": "pnpm with-env tsup --config tsup.config.js",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv --"
  },
  "dependencies": {
    "@fulltemplate/api-internal": "workspace:^",
    "@fulltemplate/auth": "workspace:^",
    "@fulltemplate/common": "workspace:^",
    "@fulltemplate/db": "workspace:^",
    "@fulltemplate/event": "workspace:^",
    "@fulltemplate/helpers": "workspace:^",
    "@fulltemplate/kafka": "workspace:^",
    "@fulltemplate/logger": "workspace:^",
    "@fulltemplate/socket": "workspace:^",
    "@paralleldrive/cuid2": "catalog:",
    "@t3-oss/env-core": "catalog:",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "axios": "1.8.3",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "express": "4.18.1",
    "helmet": "7.0.0",
    "jsonwebtoken": "9.0.2",
    "moment": "catalog:",
    "neverthrow": "catalog:",
    "node-cron": "3.0.2",
    "socket.io": "catalog:",
    "superjson": "catalog:",
    "uuid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@fulltemplate/eslint-config": "workspace:^",
    "@fulltemplate/prettier-config": "workspace:^",
    "@fulltemplate/tsconfig": "workspace:^",
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.13.10",
    "@types/node-cron": "3.0.7",
    "@types/uuid": "catalog:",
    "@types/ws": "8.5.10",
    "eslint": "catalog:",
    "javascript-obfuscator": "4.1.1",
    "prettier": "catalog:",
    "tsup": "8.3.6",
    "tsx": "4.19.2",
    "typescript": "catalog:"
  },
  "prettier": "@fulltemplate/prettier-config"
}
