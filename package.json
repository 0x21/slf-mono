{
  "name": "fulltemplate",
  "private": true,
  "engines": {
    "node": ">=22.11.0",
    "pnpm": "^10.6.5"
  },
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "pnpm lint:ws",
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "clean:install": "rm -f ./pnpm-lock.yaml && turbo clean && pnpm i && turbo db:generate",
    "clean:install:frozen": "turbo clean && pnpm i --frozen-lockfile && turbo db:generate",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "db:push-force": "turbo db:push-force db:generate",
    "db:studio": "turbo db:studio",
    "db:migrate:status": "turbo db:migrate:status",
    "db:migrate:init": "turbo db:migrate:init",
    "db:migrate:init:apply": "turbo db:migrate:init:apply",
    "db:migrate:create": "turbo db:migrate:create",
    "db:migrate:deploy": "turbo db:migrate:deploy",
    "dev": "turbo dev --parallel",
    "dev2": "turbo watch dev --continue",
    "dev2:next": "turbo watch dev -F @acme/nextjs...",
    "start": "turbo start",
    "start:onpremise": "turbo start:onpremise",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "manypkg": "manypkg check",
    "ui-add": "turbo run ui-add",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@fulltemplate/prettier-config": "workspace:^",
    "@manypkg/cli": "0.24.0",
    "@turbo/gen": "2.5.0",
    "dotenv-cli": "catalog:",
    "husky": "9.1.7",
    "prettier": "catalog:",
    "turbo": "2.5.0",
    "typescript": "catalog:"
  },
  "prettier": "@fulltemplate/prettier-config"
}
